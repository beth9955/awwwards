@import "reset.css"



/*mixins*/
vendorAll(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    {prop} args

vender(prop, args)
    {prop} args
    -webkit-{prop} args

border-radius()
    vendorAll('border-radius', arguments)

box-shadow()
    vendorAll('box-shadow', arguments)

transition()
    vender('transition', arguments)
    
transform()
    vender('transform', arguments)
    
display-flex()
  display: flex 
  display: -webkit-box  
  display: -ms-flexbox 
  display: -webkit-flex 
       
    
display-flex-direction(arg)
    flex-direction: arg 
    -webkit-flex-direction: arg 
    -ms-flex-direction:arg

display-box-orient(arg)
        -moz-box-orient: arg    
        -webkit-box-orient: arg  
        
display-flex-pack(arg)
    -webkit-box-pack: arg
    -ms-flex-pack: arg

display-flex-pack-content(prop, arg)
     -webkit-{prop}-content: arg
     {prop}-content: arg
        
display-flex-flex(arg)
    -webkit-box-flex: arg
    -webkit-flex: arg
    -ms-flex: arg
    flex: arg
  
/*color*/
background-color=#f4f7f6
font-color=#202121
border-color=#e6eaea
button-color=#42ab9e
menu-dropdown-color=#dbe0df

*
    margin:0
    padding:0
html
    box-sizing:border-box
    
*,*:before,*:after
    box-sizing:inherit
    
/*common*/
body
    margin auto
    font-family "Roboto", serif
    font-size 14px
    font-weight 300
    color font-color
    background background-color
    overflow-x hidden
    
a
    color #42ab9e
    text-decoration none
    transition(color .3s ease-in-out)

.button
    position relative
    display inline-block
    height 60px
    padding 0 35px
    background-color button-color
    color #fff
    line-height 60px
    text-align center
    font-size 13px
    font-weight 500
    cursor pointer
    border 0
    overflow hidden
    transition(all .3s ease-in-out)
    

.wrapper
    position relative
    width 100%
    min-height 100%
    padding-top 70px
    background background-color
    transition(all .5s ease-in-out)
    z-index 2
  
.nav-sidebar-open > .wrapper 
    position fixed
    transform(translateX(320px))

.wrapper::before
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0,0.75)
    z-index 400
    visibility hidden
    transition(all .5s ease-in-out)
 
    
.nav-main{
    display-flex()
    display-flex-direction(column)
    display-box-orient(vertical)
    display-flex-pack(justify)
    display-flex-pack-content(justify, space-between)
    position absolute
    top 0
    left 0
    bottom 0
    width 320px
    height 100vh
    background background-color
    overflow-y auto
    z-index 301
    transform(translateX(-320px))
    transition(transform .5s ease-in-out)
    
  
    .menu li .item{
        position relative
        display block
        padding 24px 30px
        font-size 17px
        font-weight bold
        cursor pointer
        color font-color
        background background-color
        border-bottom 1px solid border-color
        transition(background .5s ease-in-out)
    }
    
      .menu li.active .item{
        color button-color
    }
    
    .menu li.dropdown{
        position relative
        
        &:before, &:after{
            content ''
            position absolute
            right 28px
            width 18px
            z-index 1
        }
        &:after{
            top 37px
            height 3px
            border-top 3px solid menu-dropdown-color
        }
        &:before{
            top 27px
            height 8px
            border-top 3px solid menu-dropdown-color
            border-bottom 3px solid menu-dropdown-color
        }
    }
    
    .menu li [data-count]:not([data-count=""]):not([data-count="0"]):after{
        content attr(data-count)
        display block
        position absolute
        top 50%
        right 25px
        width 24px
        line-height 24px
        font-size 11px
        font-weight 500
        text-align center
        background-color #fef7c1
        border-radius 50%
        transform(translateY(-50%))
    }
}    

.header{
    height 70px
    padding 0 30px
    line-height 70px
    font-weight normal
    background-color background-color
    border-bottom 1px solid border-color
    transition(all .3s ease-in-out)
    
    .bt-close{
        cursor pointer
        padding-right 30px
        color font-color
        z-index 1
        transition(all .3s ease-in-out)
        &:before, &:after {
            content:''
            position absolute
            top 33px
            width 20px
            height 3px
            right 27px
            background font-color
            transform(rotate(45deg))
            transition(all .3s ease-in-out)
        }
        
        &:after{
             transform(rotate(-45deg))
        }
    }
    

    .pull-left{
        float left
    }
    .pull-right{
        float right
    }
}

    
